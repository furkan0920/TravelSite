@using TravelWebSite.Models
@model List<Comments>

@{
	ViewData["Title"] = "CommentList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CommentList</h1>

<table class="table table-bordered">
	<tr>
		<th>ID</th>
		<th>User</th>
		<th>Mail</th>
		<th>Comment</th>
		@* <th>Blog</th> *@
		<th>Delete</th>
		<th>Update</th>
	</tr>
	@foreach (var x in Model)
	{
		<tr>
			<td>@x.ID</td>
			<td>@x.UserName</td>
			<td>@x.Mail</td>
			<td>@x.Comment</td>
			@* <td>@x.Blog.Title</td> *@
			<td><a href="/Admin/CommentDelete/@x.ID" class="btn btn-danger">Delete</a></td>
			<td><a href="/Admin/CommentGet/@x.ID" class="btn btn-warning">Update</a></td>
		</tr>
	}
</table>