@model TravelWebSite.Models.Blog
@{
    ViewData["Title"] = "NewBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>NewBlog add</h1>

<br />
<form class="form-group" method="post">
    @Html.LabelFor(x=>x.Title)
    @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})
    <br />
    @Html.LabelFor(x => x.DateT)
    @Html.TextBoxFor(x => x.DateT, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Description)
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Blog Add</button>
</form>