@using TravelWebSite.Models
@model List<Blog>
@foreach (var x in Model)
{
	<div class="right">
		<div class="bot-left">
			<img src="@x.BlogImage" alt="" />
		</div>
		<div class="left-text">

			<h4>@x.Title</h4>
			<span class="doller">@x.DateT.ToString("dd.MM.yyyy")</span>
			<p>@x.Description.Substring(0,2)</p>
			<p><a href="/Blog/BlogDetails/@x.ID"><span class="read">read more >></span></a></p>
		</div>
	</div>
}