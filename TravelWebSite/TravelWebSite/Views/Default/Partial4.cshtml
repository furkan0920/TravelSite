@using TravelWebSite.Models
@model List<Blog>

<div class="padding1">
	<h4>Our Best Places</h4>
	<div class="box-left">
		@foreach (var x in Model)
		{
			<div class="bot-img">
				<img src="@x.BlogImage" alt="" style="width:300px; height:150px;" />
			</div>
			<div class="bot-desc">
				<p>@x.Description.Substring(0,3) </p>
			</div>
			<div class="clear"></div>			
		}
	</div>
	@Html.Partial("Partial5",Model)
</div>